@{
}


    <!-- Basic Bootstrap Table -->
    <div class="card">
       @*  <a class="btn btn-success" asp-area="Admin" asp-controller="Article" asp-action="Add">Yeni Makale Ekle <i class="bx bx-plus"></i></a> *@
        <div class="table-responsive text-nowrap m-5">



            <table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Ürün İsmi</th>
                        <th>Fiyat</th>
                        <th>Stok</th>
                        <th>Durum</th>
                        <th>İşlem</th>

                    </tr>
                </thead>
              
                <tbody class="table-border-bottom-0">
                    @foreach (var product in Model)
                    {
                    <tr name="@product.Id">
                        <th>@product.Name</th>
                        <th>@product.Price</th>
                        <th>@product.Stock</th>
                       


                           

                        </tr>


                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->




</div>