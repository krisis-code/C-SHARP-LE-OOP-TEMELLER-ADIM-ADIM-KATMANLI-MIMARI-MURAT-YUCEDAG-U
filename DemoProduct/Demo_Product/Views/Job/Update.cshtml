@using EntityLayer.Concrete
@model Customer
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}


<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Müşteri Yönetimi /</span> Müşteri Güncelle
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <form asp-controller="Customer" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">

                        <div class="form-group">
                            <label asp-for="Name" id="defaultFormControlInput" class="form-label">Müşteri ismi</label>
                            <input asp-for="Name" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen Müşteri ismi giriniz." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="City" id="defaultFormControlInput" class="form-label">Şehir</label>
                            <input asp-for="City" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen Şehir bilgisini giriniz." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>




                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>






