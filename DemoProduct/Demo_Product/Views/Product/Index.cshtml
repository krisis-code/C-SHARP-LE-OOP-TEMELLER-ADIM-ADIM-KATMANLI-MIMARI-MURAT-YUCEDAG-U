@using EntityLayer.Concrete

@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Ürün  Yönetimi /</span> Ürünler
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <a class="btn btn-success"  asp-controller="Product" asp-action="Add">Yeni ürün ekle <i class="bx bx-plus"></i></a>
        <div class="table-responsive text-nowrap m-5">



            <table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Ürün ismi</th>
                        <th>Fiyat</th>
                        <th>Stok</th>
                       

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Ürün ismi</th>
                        <th>Fiyat</th>
                        <th>Stok</th>
                      

                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var product in Model)
                    {
                        <tr name="@product.Id">
                            <th>@product.Name</th>
                            <th>@product.Price</th>
                            <th>@product.Stock</th>
                           
                            
                            <th>

                                <a class="btn btn-primary btn-sm" data-id="@product.Id" asp-area="Admin" asp-controller="Product" asp-action="Update" asp-route-Id="@product.Id"><i class="bx bxs-edit"></i></a>
                                <a class="btn btn-danger btn-sm" data-id="@product.Id" asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-Id="@product.Id"><i class="bx bx-minus-circle"></i></a>


                            </th>

                        </tr>


                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->




</div>

@section Scripts {
    <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}

